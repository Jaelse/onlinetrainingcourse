<h1>Students List</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Citizen ID</th>
      <th>Student ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.fname %></td>
        <td><%= student.lname %></td>
        <td><%= student.citizenid %></td>
        <td><%= student.insorstid %></td>
         <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_subscriber_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= form_tag({controller: "main", action: "students_list_filtered"}, method: "post") do %>
    <div class="field">
        <%= label_tag(:first_name, "First name") %>
        <%= text_field_tag(:fname) %>
    </div>

    <div class="actions">
     <%= submit_tag("Search") %>
    </div>
<% end %>

