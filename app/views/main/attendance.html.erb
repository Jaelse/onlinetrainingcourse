<% if @started %>
    <%= content_tag :h1, "Classes started"%>
    <%= link_to 'finish class', finished_class_path(params[:course_id]) if policy(@start_class).finished_class?%>
<% elsif @class_going %>
    <%= content_tag :h1, "Class Still going on" %>
    <%= link_to 'finish class', finished_class_path(params[:course_id]) if policy(@start_class).finished_class?%>
<% elsif @finished %>
    <%= content_tag :h1, "Class Ended" %>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Student ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @giving_attendance.each do |attendance| %>
      <tr>
        <td><%= Subscriber.find(Subscription.find(attendance.subscription_id).subscriber_id).fname %></td>
        <td><%= Subscriber.find(Subscription.find(attendance.subscription_id).subscriber_id).lname %></td>
        <td><%= Subscriber.find(Subscription.find(attendance.subscription_id).subscriber_id).insorstid %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'home', home_path %>