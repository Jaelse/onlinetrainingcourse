<h1>All groups</h1>
<table>
    <thead>
        <tr>
        <th>Group name</th>
        <th>Group count</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @groups.each do |group|%>
            <tr>
            <td><%= group.group_name %></td>
            <td><%= Subscription.where( group_id: group.id).count %></td>
            </tr>
        <% end %>
    </tbody>
</table>

<%= link_to "home", home_path %>

