<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Subscriber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= Subscriber.where( id: course.subscriber_id).first.fname %></td>
        <td><%= link_to 'Show', course  %></td>
        <td><%= link_to 'Edit', edit_course_path(course) if policy(@courses).update? %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } if policy(@courses). destroy? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path if policy(@courses).create? %>
<%= link_to 'Home', home_path %>